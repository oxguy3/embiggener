{
    "name": "Embiggener",
    "version": "1.0.0",
    "description": "Finds the biggest possible version of any image",
    "permissions": [
        "activeTab",
        "declarativeContent",
        "storage"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "page_action": {
        "default_title": "Make it bigger",
        "default_icon": {
            "16": "images/scale-image-16.png",
            "32": "images/scale-image-32.png"
        }
    },
    "icons": {
        "16": "images/scale-image-16.png",
        "32": "images/scale-image-32.png"
    },
    "manifest_version": 2
}
